<%= form_for @company do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :suffix %>
<%= f.text_field :suffix %>
<%= f.label :catch_phrase %>
<%= f.text_field :catch_phrase %>
<%= f.label :email %>
<%= f.email_field :email %>
<%= f.label :start_date %>
<%= f.date_field :start_date %>
<%= f.label :industry%>
<%= f.date_field :industry%>
<% if path = @company.new_record? %>
<%= f.submit "Create Company", class: "btn btn-primary" %>
<% else %>
<%= f.submit "Update Company", class: "btn btn-primary"%>
<% end %>
<%= link_to "Cancel", companies_path, class: "btn btn-default" %>
<% end %>
